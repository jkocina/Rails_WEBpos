<table border="1">
<tr>
  <td><%= f.label :product, "Product" %></td>
  <td><%= f.collection_select :product_id, Product.all, :id, :name, hide_label: true%></td>
</tr>
<tr>
  <td><%= f.label :quantity, "Quantity" %></td>
  <td><%= f.text_field :quantity, class: 'padli', hide_label: true %></td>
</tr>
<tr>
  <td colspan="2"><%= link_to "Remove Product", '#', class: "remove_fields" %></td>
</tr>
<%= f.hidden_field :_destroy %>
</table>
