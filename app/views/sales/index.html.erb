
<h1>Sales</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.name %></td>
        <td>$<%= number_with_precision(sale.total, precision: 2) %></td>
        <td><%= link_to 'Show', sale %>
          <% if can? :update, Sale %> <!--helper method-->
            | <%= link_to 'Edit', edit_sale_path(sale) %>
          <% end %>
          <% if can? :destroy, Sale %>
            | <%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

